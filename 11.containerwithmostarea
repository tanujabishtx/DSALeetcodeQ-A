class Solution {
    public int maxArea(int[] height) {
        int i = 0;                       // left pointer
        int j = height.length - 1;       // right pointer
        int area = 0;                    

        while (i < j) {
            int min_height = Math.min(height[i], height[j]);
            int width = j - i;
            area = Math.max(area, width * min_height);

            if (height[i] <= height[j]) {
                i++;
            } else {
                j--;
            }
        }

        return area;
    }
}
